<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jdelijser.bibliotheek.controller.LibraryController">
    <children>
        <ListView prefHeight="400.0" prefWidth="401.0" fx:id="bookList">
        </ListView>
        <VBox prefHeight="400.0" prefWidth="262.0">
            <children>
                <Label prefHeight="26.0" prefWidth="161.0" text="Title:" textFill="#8a8a8a"/>
                <Label prefHeight="26.0" prefWidth="161.0" fx:id="bookTitle" text="Eat that frog!">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Label prefHeight="26.0" prefWidth="161.0" text="Author:" textFill="#8a8a8a"/>
                <Label prefHeight="26.0" prefWidth="161.0" fx:id="bookAuthor"  text="Brian Tracy">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Label prefHeight="26.0" prefWidth="161.0" text="Genre:" textFill="#8a8a8a"/>
                <Label prefHeight="26.0" prefWidth="161.0" fx:id="bookGenre" text="Psychology">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Label prefHeight="26.0" prefWidth="161.0" text="Publisher:" textFill="#8a8a8a"/>
                <Label prefHeight="26.0" prefWidth="161.0" fx:id="bookPublisher" text="Maven Publishing">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Label prefHeight="26.0" prefWidth="161.0" text="Date:" textFill="#8a8a8a"/>
                <Label prefHeight="26.0" prefWidth="161.0" fx:id="bookDate" text="january 2017">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" onAction="#deleteBook" prefHeight="25.0" prefWidth="161.0"
                        text="Delete book">
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </VBox>
        <VBox prefHeight="400.0" prefWidth="174.0">
            <children>
                <Button mnemonicParsing="false" onAction="#openGenres" prefHeight="25.0" prefWidth="161.0"
                        text="Genres">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#openAuthors" prefHeight="25.0" prefWidth="161.0"
                        text="Authors">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#openPublishers" prefHeight="25.0" prefWidth="161.0"
                        text="Publishers">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#openAddBook" prefHeight="25.0" prefWidth="161.0"
                        text="Add book">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#changeSource" prefHeight="25.0" prefWidth="161.0"
                        text="Change source"/>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
